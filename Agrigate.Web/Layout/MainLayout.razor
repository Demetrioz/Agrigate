@using Agrigate.Web.Layout.AppBar
@using Agrigate.Web.Layout.NavDrawer

@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <AppBar OnToggle="@ToggleDrawer"></AppBar>
    <NavDrawer IsOpen="_open"></NavDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    [Inject]
    public required NavigationManager NavigationManager { get; set; }
    
    private bool _open = true;

    private void ToggleDrawer()
    {
        _open = !_open;
    }
}