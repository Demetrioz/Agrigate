@inherits NavDrawerBase

<MudDrawer Open="@IsOpen" ClipMode="DrawerClipMode.Always">
    <MudNavMenu>
        <MudText Typo="Typo.h6">Agrigate</MudText>
        <MudDivider />
        <MudNavLink Match="NavLinkMatch.All" Href="/" Icon="fas fa-home">
            Home
        </MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="/tasks" Icon="fas fa-list-check">
            Tasks
        </MudNavLink>
        <MudNavGroup Title="Production" Icon="fas fa-tractor" Expanded="true">
            <MudNavLink Match="NavLinkMatch.All" Href="/crops" Icon="fas fa-seedling">
                Crops
            </MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/crop-details" Icon="fas fa-circle-info">
                Crop Details
            </MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudDrawer>